    <dependencies>
        <dependency>
            <groupId>avalon-framework</groupId>
            <artifactId>avalon-framework-api</artifactId>
            <version>4.3-RC2</version>
        </dependency>
        
        <dependency>
            <id>xml-apis</id>
            <version>2.0.2</version>
            <properties note="Only required if not provided by JVM.">
